@node Makefile Stop Server
@appendixsubsubsec Makefile Stop Server

@<Makefile Server Stop@>=
.Phony : stop-server
stop-server :
	PS=$$(ps -o pid -o comm | grep node | sed -e 's/[^[:digit:]]//g'); \
	[ $${#PS} -ne 0 ] && \
	{ kill $${PS}; echo server process $${PS} stopped; } || \
	echo no node process to kill

@

